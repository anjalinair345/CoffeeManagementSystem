        <PasswordBox HorizontalAlignment="Left" Margin="307,193,0,0" VerticalAlignment="Top" Width="162" Height="28"/>
        <Label Content="Confirm Password" HorizontalAlignment="Left" Margin="119,248,0,0" VerticalAlignment="Top" FontSize="20" Width="188" FontWeight="Bold" />
        <PasswordBox HorizontalAlignment="Left" Margin="307,254,0,0" VerticalAlignment="Top" Width="160" Height="28"/>
    </Grid>
</Window>
